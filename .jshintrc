{
    // Details: https://github.com/victorporof/Sublime-JSHint#using-your-own-jshintrc-options
    // Example: https://github.com/jshint/jshint/blob/master/examples/.jshintrc
    // Documentation: http://www.jshint.com/docs/
    "browser": true,
        "esnext": true,
        "globals": {
            // MOCHA and CHAI
            "describe"   : false,
            "it"         : false,
            "to"         : false,
            "ok"         : false,
            "be"         : false,
            "before"     : false,
            "beforeEach" : false,
            "after"      : false,
            "afterEach"  : false,
            "equal"      : false
        },
        "globalstrict": true,
        "quotmark": true,
        "smarttabs": true,
        "trailing": true,
        "undef": true,
        "unused": true,
        "node": true
}
